<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.splash.SplashActivity">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:text="라이나G 통합 플랫폼"
        android:textSize="19sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:text="Enter url of server :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_title"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/splash_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="15"
        android:inputType="textPersonName"
        android:text="https://gadev.lina.co.kr/html/gap/GP/GPN630M0.html"
        app:layout_constraintTop_toBottomOf="@+id/textViewUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>
<!--    android:text="https://gatest.lina.co.kr/html/gap/GM/GMU650M0.html"-->
    <Button
        android:id="@+id/btnGo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="GO"
        app:layout_constraintTop_toBottomOf="@+id/splash_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnTestPage"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Test Page"
        app:layout_constraintTop_toBottomOf="@+id/btnGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnVestPin2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="VestPin 2"
        app:layout_constraintTop_toBottomOf="@+id/btnTestPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnBioAuth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Bio Auth"
        app:layout_constraintTop_toBottomOf="@+id/btnVestPin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/splash_img_1"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/bi_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/splash_img_2"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/lina_ga"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_img_1"/>
    <ImageView
        android:id="@+id/splash_img_3"
        android:layout_width="260dp"
        android:layout_height="284dp"
        android:layout_marginBottom="130dp"
        android:src="@drawable/lina_g"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/splash_img_4"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ci_horiaon"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>